upstream django {
    server web:8000;
}

server {

    listen 80;
    server_name probr-nginx;
    charset utf-8;

    location /media  {
        alias /app/media;
    }

    location /static {
        alias /app/static;
    }

    location / {

        include /app/nginx/uwsgi_params;
        uwsgi_pass django;

        proxy_redirect     off;
        proxy_set_header   Host $host;
        proxy_set_header   X-Real-IP $remote_addr;
        proxy_set_header   X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header   X-Forwarded-Host $server_name;

    }

    location /ws {

        include /app/nginx/uwsgi_params;
        uwsgi_pass django;

        proxy_redirect     off;
        proxy_set_header   Host $host;
        proxy_set_header   X-Real-IP $remote_addr;
        proxy_set_header   X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header   X-Forwarded-Host $server_name;

    }

}